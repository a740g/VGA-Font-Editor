$If VGAFONT_BI = UNDEFINED Then
    $Let VGAFONT_BI = TRUE
    '-----------------------------------------------------------------------------------------------------------------------------------------------------------
    ' CONSTANTS
    '-----------------------------------------------------------------------------------------------------------------------------------------------------------
    ' PSF1 file ID
    Const PSF1_MAGIC0 = &H36
    Const PSF1_MAGIC1 = &H04
    '-----------------------------------------------------------------------------------------------------------------------------------------------------------

    '-----------------------------------------------------------------------------------------------------------------------------------------------------------
    ' USER DEFINED TYPES
    '-----------------------------------------------------------------------------------------------------------------------------------------------------------
    ' A simple 2D vector
    Type Vector2DType
        x As Long
        y As Long
    End Type


    ' An in-memory PSF representation
    Type PSFType
        size As Vector2DType ' this just holds the font width and height
        bitmap As String ' a variable length string that holds the bitmap of all glyphs in the font
    End Type
    '-----------------------------------------------------------------------------------------------------------------------------------------------------------

    '-----------------------------------------------------------------------------------------------------------------------------------------------------------
    ' GLOBAL VARIABLES
    '-----------------------------------------------------------------------------------------------------------------------------------------------------------
    Dim __CurPSF As PSFType ' the active font
    '-----------------------------------------------------------------------------------------------------------------------------------------------------------
$End If
